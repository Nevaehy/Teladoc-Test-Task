<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Text -->

    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">13sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Text.Body">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="Text.Body.Bold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Text.Heading1">
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>